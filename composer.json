{
    "name": "dive-be/laravel-wishlist",
    "description": "Manage your users' wishes in a Laravel app",
    "keywords": [
        "dive",
        "laravel-wishlist",
        "wishlist"
    ],
    "homepage": "https://github.com/dive-be/laravel-wishlist",
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammed Sari",
            "email": "muhammed@dive.be",
            "homepage": "https://dive.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/console": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/cookie": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/http": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "nunomaduro/larastan": "^0.7",
        "orchestra/testbench": "^6.20",
        "pestphp/pest": "^1.17",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "files": [
            "src/Support/helpers.php"
        ],
        "psr-4": {
            "Dive\\Wishlist\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config .php-cs-fixer.dist.php --allow-risky=yes",
        "static": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dive\\Wishlist\\WishlistServiceProvider"
            ],
            "aliases": {
                "Wishlist": "Dive\\Wishlist\\Facades\\Wishlist"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
